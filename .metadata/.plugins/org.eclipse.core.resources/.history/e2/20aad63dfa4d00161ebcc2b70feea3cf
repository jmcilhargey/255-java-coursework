public class Sibling {

	private String name;
	private int age;
	private double weight;
	
	public Sibling(String n, int a, double w) {
		name = n;
		age = a;
		weight = w;
	}
	public String getName() {
		return name;
	}
	public int getAge() {
		return age;
	}
	public double getWeight() {
		return weight;
	}	
}
